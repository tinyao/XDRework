.box
  .inner
    - if current_user && current_user.can_manage_site?
      .fr
        = link_to '修改', edit_admin_page_path(@page), :class => 'btn btn-small'
    .page
      %article
        %h1.page-header
          = @title
          - unless @page.published
            %small (草稿)
        .page-content
          = format_page @page.content

